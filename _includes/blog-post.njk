---
layout: "page.njk"
---

<main>

<header class="post-meta">
	<div class="tags">
		{% for tag in tags %}
		{% if tag != "blog" %}<span>{{ tag }}</span>{% endif %}
		{% endfor %}
	</div>
	<p class="date">

		Published on
		<time datetime="{{ page.date.toISOString() }}">{{ page.date.toLocaleString("en-gb", {
			dateStyle: "long"
		}) }}</time>
	</p>
</header>


{{ content | safe }}
</main>
